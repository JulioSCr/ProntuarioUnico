<!DOCTYPE html>

@{
    ProntuarioUnico.Global mobjGlobal = new ProntuarioUnico.Global();
}

<html>
<head>
    <meta charset="utf-8" />
    <meta content="True" name="HandheldFriendly" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prontuário Único</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Libs/Bootstrap/bootstrap.css?" + DateTimeOffset.Now)" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Libs/Bootstrap/bootstrap-grid.css?" + DateTimeOffset.Now)" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Libs/Global/Global.css?" + DateTimeOffset.Now)" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Views/Login/Login.css?" + DateTimeOffset.Now)" />
</head>

<body load style="display:none;">

    <main>
        <div id="divLogin_SignIn">
            <div id="divLogin_Logo">
                <img src="~/Content/Imagens/Shared/imgLogo.png" />
            </div>
            @*Formulário para login*@
            <form id="frmLogin_Entrar" style="display: block;">
                <div class="form-group">
                    <label for="txtLogin_Login">Login</label>
                    <input type="text" class="form-control" id="txtLogin_Login" aria-describedby="emailHelp" placeholder="CPF" required>
                </div>
                <div class="form-group">
                    <label for="txtLogin_Senha">Senha</label>
                    <input type="password" class="form-control" id="txtLogin_Senha" placeholder="Digite sua senha" required>
                    <a href="javascript:Login.spnLogin_EsqueceuSenha_Click()" id="spnLogin_EsqueceuSenha" class="form-text text-muted">Esqueceu sua senha?</a>
                </div>
                <div class="form-row">
                    <div class="col">
                        <a href="javascript:Login.spnLogin_CriarConta_Click()" id="spnLogin_CriarConta" class="form-text text-muted">Criar conta</a>
                    </div>
                    <div class="col cssLogin_BtnRigth">
                        <button id="btnLogin_Entrar" type="button" class="btn btn-primary" onclick="Login.Logar()">Entrar</button>
                    </div>
                </div>
            </form>
            @*Formulário para recuperação de senha*@
            <form id="frmLogin_Senha" style="display: none;">
                <div class="form-group">
                    <label for="txtLogin_NovaSenha">Login</label>
                    <input type="email" class="form-control" id="txtLogin_NovaSenha" aria-describedby="emailHelp" placeholder="Usuário ou CPF">
                </div>
                <div class="form-row">
                    <div class="col">
                        <a href="javascript:Login.btnLayoutVoltar_Click()" id="btnLayoutVoltar" class="form-text text-muted cssLogin_BtnVoltar">Voltar</a>
                    </div>
                    <div class="col cssLogin_BtnRigth">
                        @*Botão para acionar modal*@
                        <button id="btnLogin_NovaSenha" type="button" class="btn btn-primary" data-target="#divLogin_ModalRecuperarSenha" data-toggle="modal">Prosseguir</button>
                    </div>
                </div>
            </form>
            @*Modal*@
            <div class="modal fade" id="divLogin_ModalRecuperarSenha" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        @*<div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Título do modal</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>*@
                        <div class="modal-body">
                            <br /><h1>E-mail enviado para endereço vinculado a conta.</h1><br />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                            @*<button type="button" class="btn btn-primary">Salvar mudanças</button>*@
                        </div>
                    </div>
                </div>
            </div>
            @*Formulário para criar conta*@
            <form id="frmLogin_CriarConta" style="display: none;">
                <div class="form-group">
                    <label for="txtLogin_Nome">Nome</label>
                    <input type="text" class="form-control" id="txtLogin_Nome" aria-describedby="emailHelp" placeholder="Nome completo" required>
                </div>
                <div class="form-row">
                    <div class=" col-sm-5">
                        <label for="txtLogin_CPF">CPF</label>
                        <input type="text" class="form-control" id="txtLogin_CPF" placeholder="CPF" required>
                    </div>
                    <div class="col-sm-7">
                        <label for="txtLogin_DtNasc">Data de nascimento</label>
                        <input type="date" class="form-control" id="txtLogin_DtNasc" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="txtLogin_Email">E-mail</label>
                    <input type="email" class="form-control" id="txtLogin_Email" placeholder="E-mail" required>
                </div>
                <div class="form-row">
                    <div class=" col-sm-6">
                        <label for="txtLogin_CadastroSenha">Senha</label>
                        <input type="password" class="form-control" id="txtLogin_CadastroSenha" placeholder="Senha" required>
                        <div class="invalid-tooltip">Campo obrigatório</div>
                    </div>
                    <div class="col-sm-6">
                        <label for="txtLogin_CadastroSenha_Confirmar">Confirmar senha</label>
                        <input type="password" class="form-control" id="txtLogin_CadastroSenha_Confirmar" placeholder="Confirmar Senha" required>
                        <div class="invalid-tooltip">Campo obrigatório</div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        <a href="javascript:Login.spnLogin_Cancelar_Click()" id="spnLogin_Cancelar" class="form-text text-muted">Cancelar</a>
                    </div>
                    <div class="col cssLogin_BtnRigth">
                        <button id="btnLogin_Salvar" type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
    </main>

    <script src="@Url.Content("~/Scripts/Libs/Jquery/jquery-3.4.1.js?" + DateTimeOffset.Now)"></script>
    <script src="@Url.Content("~/Scripts/Libs/Bootstrap/bootstrap.js?" + DateTimeOffset.Now)"></script>
    <script src="@Url.Content("~/Scripts/Libs/Bootstrap/bootstrap.bundle.js?" + DateTimeOffset.Now)"></script>
    <script src="@Url.Content("~/Scripts/Libs/Global/Global.js?" + DateTimeOffset.Now)"></script>
    <script src="@Url.Content("~/Scripts/Views/Login/Login.js?" + DateTimeOffset.Now)"></script>
    <script>
        var gstrGlobalPath = '@mobjGlobal.Monta_GlobalPath(Request)';
    </script>
</body>
</html>