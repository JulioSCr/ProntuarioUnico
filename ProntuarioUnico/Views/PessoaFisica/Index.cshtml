@using ProntuarioUnico.ViewModels
@model PessoaFisicaViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head {
    <link rel="stylesheet" href="@Url.Content("~/Content/Views/Home/Index.css?" + DateTimeOffset.Now)" />
}

@section scripts {
    <script src="@Url.Content("~/Scripts/Views/PessoaFisica/Index.js?" + DateTimeOffset.Now)"></script>
}


<div class="row lign-items-center">
    <div class="col-md-10">
        <form action="@Url.Action("Atualizar", "PessoaFisica")" method="post">
            <input type="hidden" name="pessoaViewModel.Codigo" value="@Model.Codigo">
            <div class="form-group">
                <label>Nome</label>
                <input type="text" class="form-control" name="pessoaViewModel.Nome" placeholder="Nome completo" value="@Model.Nome">
            </div>
            <div class="form-group">
                <label>Data Nascimento</label>
                <input type="date" class="form-control" name="pessoaViewModel.DataNascimento" value="@(Model.DataNascimento.ToString("yyyy-MM-dd"))">
            </div>
            <div class="form-group">
                <label>Número Telefone</label>
                <input type="number" class="form-control" name="pessoaViewModel.NumeroTelefone" value="@Model.NumeroTelefone">
            </div>
            <div class="form-group">
                <label>Número CPF</label>
                <input type="number" class="form-control" name="pessoaViewModel.CPF" value="@Model.CPF">
            </div>
            <div class="form-group">
                <input class="form-check-input" type="checkbox" onchange="ControleCheckBox(this)" name="pessoaViewModel.AlterarSenha" value="true">
                <input type="hidden" value="false" name="pessoaViewModel.AlterarSenha" />
                <label class="form-check-label" for="pessoaViewModel.AlterarSenha">
                    Alterar Senha
                </label>
            </div>
            <div class="form-group">
                <div class="col-sm-4">
                    <label>Senha antiga</label>
                    <input type="password" class="form-control" name="pessoaViewModel.SenhaAntiga" @(Model.AlterarSenha ? "" : "disabled")>
                </div>
                <div class="col-sm-4">
                    <label>Nova Senha</label>
                    <input type="password" class="form-control" name="pessoaViewModel.NovaSenha" @(Model.AlterarSenha ? "" : "disabled")>
                </div>
                <div class="col-sm-4">
                    <label>Confirmar nova senha</label>
                    <input type="password" class="form-control" name="pessoaViewModel.ConfirmarSenhaNova" @(Model.AlterarSenha ? "" : "disabled")>
                </div>
            </div>
            <input class="btn-info" type="submit" value="Atualizar Registro" />
        </form>
    </div>
</div>