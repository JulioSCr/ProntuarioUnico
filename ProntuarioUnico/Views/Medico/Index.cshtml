@using ProntuarioUnico.ViewModels
@model MedicoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head {
    <link rel="stylesheet" href="@Url.Content("~/Content/Views/Home/Index.css?" + DateTimeOffset.Now)" />
}

@section scripts {
    <script src="@Url.Content("~/Scripts/Views/PessoaFisica/Index.js?" + DateTimeOffset.Now)"></script>
}

<div class="row lign-items-center">
    <div class="col-md-10">
        <form action="@Url.Action("Atualizar", "Medico")" method="post">
            <input type="hidden" name="medicoViewModel.Codigo" value="@Model.Codigo">
            <div class="form-group">
                <label>Nome Guerra</label>
                <input type="text" class="form-control" name="medicoViewModel.Nome" placeholder="Nome completo" value="@Model.NomeGuerra">
            </div>
            <div class="form-group">
                <label>Número CRM</label>
                <input type="number" class="form-control" name="medicoViewModel.CPF" value="@Model.CRM">
            </div>
            <div class="form-group">
                <label>E-mail</label>
                <input type="email" class="form-control" name="medicoViewModel.Email" value="@Model.Email">
            </div>
            <div class="form-group">
                <input class="form-check-input" type="checkbox" onchange="ControleCheckBox(this)" name="medicoViewModel.AlterarSenha" value="true">
                <input type="hidden" value="false" name="medicoViewModel.AlterarSenha" />
                <label class="form-check-label" for="medicoViewModel.AlterarSenha">
                    Alterar Senha
                </label>
            </div>
            <div class="form-group">
                <div class="col-sm-4">
                    <label>Senha antiga</label>
                    <input type="password" class="form-control" name="medicoViewModel.SenhaAntiga" @(Model.AlterarSenha ? "" : "disabled")>
                </div>
                <div class="col-sm-4">
                    <label>Nova Senha</label>
                    <input type="password" class="form-control" name="medicoViewModel.NovaSenha" @(Model.AlterarSenha ? "" : "disabled")>
                </div>
                <div class="col-sm-4">
                    <label>Confirmar nova senha</label>
                    <input type="password" class="form-control" name="medicoViewModel.ConfirmarSenhaNova" @(Model.AlterarSenha ? "" : "disabled")>
                </div>
            </div>
            <input class="btn-info" type="submit" value="Atualizar Registro" />
        </form>
    </div>
</div>