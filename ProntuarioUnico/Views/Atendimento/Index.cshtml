@using ProntuarioUnico.ViewModels
@model PessoaFisicaViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head {
    <link rel="stylesheet" href="@Url.Content("~/Content/Views/InserirAtendimento/Index.css?" + DateTimeOffset.Now)" />
}

@section scripts {
    <script src="@Url.Content("~/Scripts/Views/Atendimento/scripts.js?" + DateTimeOffset.Now)"></script>
}

<form action="@Url.Action("BuscarPaciente", "Atendimento")" method="get">
    <div class="form-row align-items-end">
        <div class="form-group col-md-2">
            <label class="col-form-label"> CPF </label>
            <input type="text" class="form-control form-control-sm" name="cpf" value="@ViewBag.CPF" min="0" />
        </div>
        <div class="form-group col-md-2 ml-2">
            <input class="btn btn-primary" type="submit" value="Filtrar" />
        </div>
    </div>
</form>


@if (ViewBag.HasData && Model != default(PessoaFisicaViewModel))
{
    <table id="tabela_pessoas" class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th scope="col">
                    CPF
                </th>
                <th scope="col">
                    Nome Completo
                </th>
                <th scope="col">
                    Data Nascimento
                </th>
                <th scope="col">
                    Email
                </th>
            </tr>
        </thead>
        <tbody id="tbody_pessoas">
            <tr>
                <td>
                    @Model.CPF
                </td>
                <td>
                    @Model.Nome
                </td>
                <td>
                    @Model.DataNascimento.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Model.Email
                </td>
            </tr>
        </tbody>
    </table>

    <form action="@Url.Action("Atendimento", "Atendimento")" method="get">
        <input type="hidden" name="codigoPessoaFisica" value="@Model.Codigo">
        <input type="submit" value="Realizar Atendimento">
    </form>
}